<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.TaskDetailsPage"
             Title="Detalhes">
    <ScrollView>
        <StackLayout Padding="20" Spacing="12">
            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="22"/>
            <Label Text="{Binding Description}"/>
            <Label Text="{Binding CreatedDate, StringFormat='Criada em: {0:dd/MM/yyyy HH:mm}'}"/>
            <Label Text="{Binding Priority}"/>

            <Button Text="Editar" Clicked="OnEditClicked"/>
            <Button Text="Excluir" Clicked="OnDeleteClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>